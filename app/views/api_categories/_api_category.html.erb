<div class='col-sm-10 offset-sm-1 my-3 <%= !center ? "col-md-6 offset-md-0" : "" %>' >
    <%= link_to rswag_ui_path, target: '_blank', class: "card shadow-sm" do %>
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="card-title">
                    <h4> <%= api_category.title %> </h4>
                    <p class="text-muted">
                        <%= api_category.description %>
                    </p>
                </div>
                <% api_category.api_routes.each do |api_route| %>
                    <hr class="mb-3">
                    <div class="card-text">
                        <p class="text-secondary"> <%= api_route.route %> --> <%= api_route.method %></p>
                        <div class="card-subtitle mb-2 text-muted">
                            <strong>Code Response: </strong>
                            <%= api_route.response %>
                        </div>
                    </div>
                <% end %>
                <% if false %>
                    <div class="api-category-actions">
                        <%= link_to "Edit this category", edit_api_category_path(api_category), class: "btn btn-xs btn-primary card-link" %> 
                        <%= link_to "Delete this category", api_category_path(api_category), method: :delete, 
                                                            data: { confirm: "Are you sure you want to delete this category?" }, 
                                                            class: "btn btn-xs btn-danger card-link" %>
                    </div>
                <% end %>
            </div>
        </div>
    <% end %>
</div>
