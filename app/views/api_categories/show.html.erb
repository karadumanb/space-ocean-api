<h2 align="center">Title: <%= @api_category.title %></h2>

<div class="well col-xs-8 col-xs-offset-2">
  <% if false %>
    <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
          <li>Created at:</li>
          <li><%= @api_category.created_at.standart_format %></li>
        </div>
      </div>
    </ul>
  <% end %>
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@api_category.description) %>
  <% if false %>
    <p>Categories: <%= render @api_category.categories %></p>
  <% end %>
  <div class="article-actions">
    <% if logged_in? && (current_user == @api_category.user || current_user.admin?) %>
      <%= link_to "Edit this article", edit_article_path(@api_category), class: "btn btn-xs btn-primary" %> 
      <%= link_to "Delete this article", article_path(@api_category), method: :delete, 
                                          data: { confirm: "Are you sure you want to delete this article?" }, 
                                          class: "btn btn-xs btn-danger" %>
    <% end %>
    <%= link_to "View all articles", articles_path, class: "btn btn-xs btn-success" %>
  </div>
</div>
