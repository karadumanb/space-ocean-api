<h2 align="center">Title: <%= @api_category.title %></h2>

<div class="well col-xs-8 col-xs-offset-2">
    <div class="row center">
        <div class="col-md-12">
           <strong> Created at: </strong> <%= @api_category.created_at.strftime("%d.%m.%Y") %>
        </div>
    </div>
    <h4 class="center description"><strong>Description:</strong></h4>
    <hr>
    <%= simple_format(@api_category.description) %>
    <div class="api-category-actions">
        <%= link_to "Edit this category", edit_api_category_path(@api_category), class: "btn btn-xs btn-primary" %> 
        <%= link_to "Delete this category", api_category_path(@api_category), method: :delete, 
                                            data: { confirm: "Are you sure you want to delete this article?" }, 
                                            class: "btn btn-xs btn-danger" %>
        <%= link_to "View all categories", api_categories_path, class: "btn btn-xs btn-success" %>
    </div>
</div>
