<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-12">
    <%= form_for(@article, :html => { class: "form-horizontal", role: "form" }) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2 offset-sm-2">
          <%= f.label :title %>  
        </div>
        <div class="col-sm-8 offset-sm-2">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2 offset-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8 offset-sm-2">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of article" %>
        </div>
      </div>
      <% if false %>
        <div class="form-group">
          <div class="row">
            <div class="col-sm-8 offset-sm-2">
              <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text } %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <div class="form-group">
        <div class="col-sm-8 offset-sm-2 text-center">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="col-sm-6 offset-sm-3 text-center">
      <%= link_to "Cancel request and return to articles listing", articles_path, class: "text-nowrap" %>
    </div>
  </div>
</div>
