<% obj.each do |question| %>
  <div class="row">
    <div class="card col-sm-8 offset-sm-2 my-3 shadow-sm">
      <div class="card-body">
        <div class="card-title">
          <%= link_to question.body, question_path(question) %>
        </div>
        <div class="card-text">
          <%= question.answer %>
          <div class="card-subtitle mb-2 text-muted">
            <small>Created <%= time_ago_in_words(question.created_at) %> ago,
                  last updated: <%= time_ago_in_words(question.updated_at) %> ago</small>
          </div>
        </div>
        <% if logged_in? && (current_user.admin?) %>
          <div class="question-actions">
            <%= link_to "Edit this question", edit_question_path(question), class: "btn btn-xs btn-primary card-link" %> 
            <%= link_to "Delete this question", question_path(question), method: :delete, 
                                                data: { confirm: "Are you sure you want to delete this question?" }, 
                                                class: "btn btn-xs btn-danger card-link" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>  
<% end %>
