<h2 align="center">Question: <%= @question.body %></h2>

<div class="well col-xs-8 col-xs-offset-2">

  <h4 class="center description mt-3"><strong>Answer:</strong></h4>
  <hr>
  <p class="ml-4">
    <%= @question.answer %>
  </p>
  <hr>

  <h4 class="center description mt-3"><strong>Difficulty:</strong></h4>

  <p class="ml-4">
    <% @question.difficulty.times do  %>
      <i class="fa fa-star fa-star--yellow"></i>
    <% end %>

    <% @question.blank_stars.times do %>
      <i class="fa fa-star"></i>
    <% end %>
  </p>
  <hr>

  <% if @question.tip.present? %>
    <h4 class="center description mt-3"><strong>Tip:</strong></h4>

    <p class="ml-4">
      <%= @question.tip %>
    </p>
    <hr>
  <% end %>


  <div class="question-actions">
    <% if logged_in? && (current_user.admin?) %>
      <%= link_to "Edit this question", edit_question_path(@question), class: "btn btn-xs btn-primary" %> 
      <%= link_to "Delete this question", question_path(@question), method: :delete, 
                                          data: { confirm: "Are you sure you want to delete this question?" }, 
                                          class: "btn btn-xs btn-danger" %>
    <% end %>
    <%= link_to "View all questions", questions_path, class: "btn btn-xs btn-success" %>
  </div>
</div>
