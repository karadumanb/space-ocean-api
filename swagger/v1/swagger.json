{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/api/articles": {
      "post": {
        "summary": "Creates a article",
        "tags": [
          "Articles"
        ],
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "article",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "user_id": {
                  "type": "integer"
                },
                "user_name": {
                  "type": "string"
                }
              },
              "required": [
                "title",
                "description"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "article created"
          },
          "422": {
            "description": "invalid request"
          }
        }
      }
    },
    "/api/articles/{id}": {
      "get": {
        "summary": "Retrieves a article",
        "tags": [
          "Articles"
        ],
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "title found",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "title",
                "description"
              ]
            }
          },
          "404": {
            "description": "article not found"
          }
        }
      }
    }
  }
}